<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_margin="45dp"
        android:src="@drawable/emi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMI CALCULATOR"
        android:textColor="#E91E1E"
        android:fontFamily="serif"
        android:textSize="18dp"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/et_principalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Principal Amount Here (In Rs.)"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textColorHint="#3E0096"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:textSize="16dp"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/et_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Monthly Rate of Interest Here (In %)"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textColorHint="#03FD0D"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="16dp"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_months"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the Number of Months Here"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColorHint="#F8BA03"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:textSize="16dp"
        android:inputType="number"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/bt_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate EMI"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:textSize="18dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's check your EMI!!"
        android:textColor="#03DBF6"
        android:fontFamily="serif"
        android:textSize="16dp"/>

</LinearLayout>
